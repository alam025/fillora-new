{
  "manifest_version": 3,
  "name": "Fillora - LinkedIn Auto Apply",
  "version": "2.0.0",
  "description": "Intelligent LinkedIn job application automation with AI-powered form filling",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://api.openai.com/*",
    "https://*.supabase.co/*",
    "https://api.ocr.space/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["config.js", "init.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}