{
  "manifest_version": 3,
  "name": "Fillora - Job Application Automation",
  "version": "1.0.0",
  "description": "Automate LinkedIn and Naukri.com job applications",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "*://www.linkedin.com/*",
    "*://linkedin.com/*",
    "*://www.naukri.com/*",
    "*://naukri.com/*",
    "*://*.naukri.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.linkedin.com/*",
        "*://linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "*://www.naukri.com/*",
        "*://naukri.com/*",
        "*://*.naukri.com/*"
      ],
      "js": ["naukri-automation.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}